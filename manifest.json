{
  "manifest_version": 3,
  "name": "PromptPolish",
  "version": "1.3.1",
  "version_name": "1.3.1 Immediate-focus fix + Rules wiring",
  "description": "Injects an Optimize button into text fields, sends text to a Cloudflare Worker for rewrite or analysis, and shows results in-page.",
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://*/",
    "http://*/"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "PromptPolish"
  },
  "icons": {
    "16": "icons/promptpolish_icon.png",
    "48": "icons/promptpolish_icon.png",
    "128": "icons/promptpolish_icon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://* http://*"
  }
}
