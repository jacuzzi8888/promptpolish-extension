{
  "manifest_version": 3,
  "name": "PromptPolish",
  "version": "1.1.0",
  "version_name": "1.1.0 Beta 1",
  "description": "A Chrome extension that upgrades user prompts by fine-tuning their language, structure, and clarity for more effective interactions with LLMs.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    // "contextMenus", // Context menu permission removed
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "https://api-inference.huggingface.co/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/promptpolish_icon.png",
      "48": "icons/promptpolish_icon.png",
      "128": "icons/promptpolish_icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/promptpolish_icon.png",
    "48": "icons/promptpolish_icon.png",
    "128": "icons/promptpolish_icon.png"
  },
  "content_security_policy": {
    // Comment removed for valid JSON
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://api-inference.huggingface.co https://promptpolish-proxy.coolguyben126.workers.dev;"
  }
}
